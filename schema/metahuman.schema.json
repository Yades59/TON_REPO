{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["pipeline_metahuman"],
  "additionalProperties": false,
  "properties": {
    "pipeline_metahuman": {
      "type": "object",
      "required": ["style", "performance", "export", "batch"],
      "additionalProperties": false,
      "properties": {
        "style": {
          "type": "string",
          "enum": ["realistic", "stylized", "cartoon"]
        },
        "performance": {
          "type": "string",
          "enum": ["realtime", "cinematic", "low"]
        },
        "export": {
          "type": "object",
          "required": ["fbx", "glb"],
          "additionalProperties": false,
          "properties": {
            "fbx": { "type": "boolean" },
            "glb": { "type": "boolean" }
          }
        },
        "batch": {
          "type": "object",
          "required": ["count"],
          "additionalProperties": false,
          "properties": {
            "count": { "type": "integer", "minimum": 1, "maximum": 1000 }
          }
        }
      }
    }
  }
}
